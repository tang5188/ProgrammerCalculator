/* calc/calc.wxss */

page {
  background-color: lightgreen;
}

.content {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: "Simsun";
  overflow-x: hidden;
  padding: 10px;
}

.layout-top {
  width: 100%;
  margin-bottom: 0rpx;
  height: 20%;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.layout-bottom {
  width: 100%;
  height: 80%;
  background-color: lightgreen;
}

.input {
  line-height: 25px;
  background-color: darkturquoise;
  height: 25px;
  color: black;
  text-align: right;
  padding-right: 5px;
  border: 1px gray solid;
}

.output {
  text-align: right;
  width: 100%;
  line-height: 120rpx;
  padding: 0 10rpx;
  font-weight: bold;
  font-size: 60px;
  box-sizing: border-box;
  border: 1px solid gray;
  vertical-align: bottom;
  background-color: white;
  overflow: hidden;
  max-height: 120rpx;
  word-break: break-all;
}

.btnGroup {
  display: flex;
  flex-direction: row;
  flex: 1;
  width: 100%;
  height: 3.5rem;
}

.calcGroup {
  display: flex;
  flex-direction: row;
  height: 2rem;
  vertical-align: center;
}

.calcMode {
  width: 10%;
  vertical-align: center;
  align-content: center;
  justify-content: center;
  display: flex;
  align-items: center;
  border: 1px red solid;
  border-radius: 2px;
  margin-top: 2px;
  background-color: burlywood;
}

.calcModeSelect {
  color: white;
  background-color: red;
}

.calcValue {
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}

.item {
  width: 20%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  font-size: 30px;
  font-style: bold;
  margin-right: 2px;
  margin-top: 2px;
  border: 1px solid black;
  border-radius: 2px;
}

.enable {
  color: black;
  background-color: burlywood;
}

.enable:active {
  background-color: goldenrod;
}

.disable {
  color: gray;
  background-color: lightgreen;
}

.disable:active {
  background-color: lightgreen;
}
